<h1 class="mb-4"><%= t("admin.admin_permissions.index.title") %></h1>

<div class="admin-pagination-search-row mb-3">
  <div class="admin-pagination-search-row__pagination">
    <%= render(PaginationComponent.new(@pagination, align: :start)) %>
  </div>
  <%= render(Admin::SearchFormComponent.new(
    url: admin_admin_permissions_path,
    search_term: @search_term,
    placeholder: t("admin.admin_permissions.index.search_placeholder")
  )) %>
</div>

<%=
  render(Admin::TableComponent.new(
    collection: @admin_permissions,
    empty_message: t("admin.admin_permissions.index.empty_message"),
    columns: [
      [t("admin.shared.id"), -> { link_to(it.id, admin_admin_permission_path(it), class: "fw-medium") }],
      [t("admin.admin_roles.columns.key"), -> { content_tag(:code, it.key) }],
      [
        t("admin.admin_roles.columns.description"),
        -> { it.description.presence },
      ],
      [
        t("admin.admin_permissions.columns.roles"),
        -> {
          it.roles.any? ? it.roles.map { |r| link_to(r.key, admin_admin_role_path(r)) }.join(", ").html_safe : content_tag(:span, t("admin.shared.none"), class: "text-body-secondary")
        },
      ],
      [t("admin.shared.actions"), -> { render(Admin::IndexActionsComponent.new(view_path: admin_admin_permission_path(it))) }],
    ],
  ))
%>

<%= render(PaginationComponent.new(@pagination, align: :start)) %>
