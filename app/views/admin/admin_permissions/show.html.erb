<div class="mb-4">
  <h1 class="mb-0"><%= @admin_permission.key %></h1>
  <%= render(Admin::ShowActionsComponent.new(back_path: admin_admin_permissions_path)) %>
</div>

<%= render(Admin::DetailsTableComponent.new(
  sections: [
    {
      title: t("admin.shared.details"),
      rows: [
        [t("admin.shared.id"), @admin_permission.id],
        [t("admin.admin_roles.columns.key"), content_tag(:code, @admin_permission.key)],
        [
          t("admin.admin_roles.columns.description"),
          @admin_permission.description.presence ? simple_format(@admin_permission.description) : nil,
          { align_top: true },
        ],
        [t("admin.shared.created"), l(@admin_permission.created_at), { copyable: true }],
        [t("admin.shared.updated"), l(@admin_permission.updated_at), { copyable: true }],
      ],
    },
  ],
)) %>

<%= turbo_frame_tag("admin_permission_roles", src: roles_admin_admin_permission_path(@admin_permission), loading: :lazy) do %>
  <div class="card mb-4">
    <div class="card-body text-center text-body-secondary py-5">
      <p class="mb-0"><%= t("admin.shared.loading") %></p>
    </div>
  </div>
<% end %>
