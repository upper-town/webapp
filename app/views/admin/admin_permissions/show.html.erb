<div class="mb-4">
  <h1 class="mb-0"><%= @admin_permission.key %></h1>
  <%= render(Admin::ShowActionsComponent.new(back_path: admin_admin_permissions_path)) %>
</div>

<%= render(Admin::DetailsTableComponent.new(sections: [
  {
    title: t("admin.shared.details"),
    rows: [
      [t("admin.shared.id"), @admin_permission.id],
      [t("admin.admin_roles.columns.key"), content_tag(:code, @admin_permission.key)],
      [t("admin.admin_roles.columns.description"), simple_format(@admin_permission.description.presence || t("admin.shared.empty_placeholder")), { align_top: true }],
      [t("admin.shared.created"), l(@admin_permission.created_at), { copyable: true }],
      [t("admin.shared.updated"), l(@admin_permission.updated_at), { copyable: true }],
    ],
  },
])) %>

<%= render(Admin::DetailsTableComponent.new(sections: [
  {
    title: t("admin.admin_permissions.show.roles_with_permission"),
    rows: @admin_permission.roles.any? ? @admin_permission.roles.map { |r| [content_tag(:code, r.key), link_to(r.description.presence || r.key, admin_admin_role_path(r))] } : [[-> { content_tag(:span, t("admin.shared.none"), class: "text-body-secondary") }]],
  },
])) %>
