<div class="mb-4">
  <h1 class="mb-0"><%= t("admin.admin_codes.show.title", id: @admin_code.id) %></h1>
  <%= render(Admin::ShowActionsComponent.new(
    back_path: admin_admin_codes_path,
    actions: [{ path: admin_admin_user_path(@admin_code.admin_user), label: t("admin.admin_codes.columns.admin_user") }]
  )) %>
</div>

<%= render(Admin::DetailsTableComponent.new(sections: [
  {
    title: t("admin.shared.details"),
    rows: [
      [t("admin.shared.id"), @admin_code.id, { copyable: true }],
      [t("admin.admin_codes.columns.admin_user"), link_to(@admin_code.admin_user.email, admin_admin_user_path(@admin_code.admin_user)), { copyable: @admin_code.admin_user.email }],
      [t("admin.codes.columns.purpose"), content_tag(:code, @admin_code.purpose), { copyable: @admin_code.purpose }],
      [t("admin.admin_sessions.columns.expires_at"), l(@admin_code.expires_at), { copyable: true }],
      [t("admin.admin_sessions.columns.expired"), @admin_code.expired? ? t("admin.shared.yes") : t("admin.shared.no")],
      [t("admin.codes.columns.code_digest"), content_tag(:code, truncate(@admin_code.code_digest, length: 16), class: "small", title: @admin_code.code_digest), { copyable: @admin_code.code_digest }],
      [t("admin.shared.created"), l(@admin_code.created_at), { copyable: true }],
      [t("admin.shared.updated"), l(@admin_code.updated_at), { copyable: true }],
    ],
  },
])) %>
<% if @admin_code.data.present? %>
  <%= render(Admin::DetailsTableComponent.new(sections: [
    {
      title: t("admin.codes.sections.data"),
      rows: [[-> { content_tag(:pre, JSON.pretty_generate(@admin_code.data), class: "mb-0 bg-light p-3 rounded small") }]],
    },
  ])) %>
<% end %>
