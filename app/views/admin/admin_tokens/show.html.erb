<div class="mb-4">
  <h1 class="mb-0"><%= t("admin.admin_tokens.show.title", id: @admin_token.id) %></h1>
  <%= render(Admin::ShowActionsComponent.new(
    back_path: admin_admin_tokens_path,
    actions: [{ path: admin_admin_user_path(@admin_token.admin_user), label: t("admin.admin_tokens.columns.admin_user") }]
  )) %>
</div>

<%= render(Admin::DetailsTableComponent.new(
  sections: [
    {
      title: t("admin.shared.details"),
      rows: [
        [t("admin.shared.id"), @admin_token.id, { copyable: true }],
        [
          t("admin.admin_tokens.columns.admin_user"),
          link_to(@admin_token.admin_user.email, admin_admin_user_path(@admin_token.admin_user)),
          { copyable: @admin_token.admin_user.email },
        ],
        [t("admin.tokens.columns.purpose"), content_tag(:code, @admin_token.purpose), { copyable: @admin_token.purpose }],
        [
          t("admin.tokens.columns.token_last_4"),
          content_tag(:code, @admin_token.token_last_four),
          { copyable: @admin_token.token_last_four },
        ],
        [t("admin.admin_sessions.columns.expires_at"), l(@admin_token.expires_at), { copyable: true }],
        [t("admin.admin_sessions.columns.expired"), @admin_token.expired? ? t("admin.shared.yes") : t("admin.shared.no")],
        [
          t("admin.tokens.columns.token_digest"),
          content_tag(:code, truncate(@admin_token.token_digest, length: 16), class: "small", title: @admin_token.token_digest),
          { copyable: @admin_token.token_digest },
        ],
        [t("admin.shared.created"), l(@admin_token.created_at), { copyable: true }],
        [t("admin.shared.updated"), l(@admin_token.updated_at), { copyable: true }],
      ],
    },
  ],
)) %>
<% if @admin_token.data.present? %>
  <%= render(Admin::DetailsTableComponent.new(
    sections: [
      {
        title: t("admin.codes.sections.data"),
        rows: [[-> { content_tag(:pre, JSON.pretty_generate(@admin_token.data), class: "mb-0 bg-light p-3 rounded small") }]],
      },
    ],
  )) %>
<% end %>
