<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">
    <%= t("admin.webhook_events.index.title") %>
    <% if @webhook_config %>
      <small class="text-body-secondary"><%= t("admin.webhook_events.index.for_config", id: @webhook_config.id) %></small>
    <% end %>
  </h1>
  <div class="btn-group">
    <% if @webhook_config %>
      <%= link_to(t("admin.webhook_events.index.all_events"), admin_webhook_events_path, class: "btn btn-outline-secondary") %>
      <%= link_to(t("admin.webhook_events.columns.config"), admin_webhook_config_path(@webhook_config), class: "btn btn-secondary") %>
    <% end %>
  </div>
</div>

<div class="admin-pagination-search-row mb-3">
  <div class="admin-pagination-search-row__pagination">
    <%= render(PaginationComponent.new(@pagination, align: :start)) %>
  </div>
  <%= render(Admin::SearchFormComponent.new(
    url: admin_webhook_events_path,
    search_term: @search_term,
    placeholder: t("admin.webhook_events.index.search_placeholder"),
    hidden_params: params.permit(:webhook_config_id).to_h
  )) %>
</div>

<%=
  render(Admin::TableComponent.new(
    collection: @webhook_events,
    empty_message: t("admin.webhook_events.index.empty_message"),
    columns: [
      [t("admin.shared.id"), -> { link_to(it.id, admin_webhook_event_path(it), class: "fw-medium") }, { copyable: :id }],
      [
        t("admin.webhook_events.columns.uuid"),
        -> { content_tag(:code, truncate(it.uuid, length: 12), class: "small", title: it.uuid) },
        { copyable: :uuid },
      ],
      [
        t("admin.webhook_events.columns.type"),
        -> { content_tag(:code, it.type, class: "small") },
        { copyable: :type },
      ],
      [
        t("admin.webhook_events.columns.config"),
        -> { link_to("##{it.config.id}", admin_webhook_config_path(it.config)) },
      ],
      [
        t("admin.webhook_events.columns.batch"),
        -> {
          if it.batch
            "##{it.batch.id}"
          else
            content_tag(:span, t("admin.webhook_events.columns.unbatched"), class: "badge text-bg-secondary")
          end
        },
      ],
      [t("admin.shared.created"), -> { l(it.created_at) }, { copyable: ->(it) { l(it.created_at) } }],
      [t("admin.shared.actions"), -> { render(Admin::IndexActionsComponent.new(view_path: admin_webhook_event_path(it))) }],
    ],
  ))
%>

<%= render(PaginationComponent.new(@pagination, align: :start)) %>
