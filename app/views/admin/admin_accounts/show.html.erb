<div class="mb-4">
  <h1 class="mb-0"><%= t("admin.admin_accounts.show.title", id: @admin_account.id) %></h1>
  <%= render(Admin::ShowActionsComponent.new(
    back_path: admin_admin_accounts_path,
    actions: [
      { path: admin_admin_user_path(@admin_account.admin_user), label: t("admin.admin_accounts.columns.admin_user") },
      { path: edit_admin_admin_account_path(@admin_account), label: t("admin.admin_accounts.show.edit_roles"), class: "btn btn-outline-primary" },
    ]
  )) %>
</div>

<%= render(Admin::DetailsTableComponent.new(sections: [
  {
    title: t("admin.shared.details"),
    rows: [
      [t("admin.shared.id"), @admin_account.id, { copyable: true }],
      [t("admin.admin_accounts.columns.admin_user"), link_to(@admin_account.admin_user.email, admin_admin_user_path(@admin_account.admin_user)), { copyable: @admin_account.admin_user.email }],
      [t("admin.admin_accounts.columns.super_admin"), @admin_account.super_admin? ? content_tag(:span, t("admin.shared.yes"), class: "badge text-bg-warning") : t("admin.shared.no")],
      [t("admin.shared.created"), l(@admin_account.created_at), { copyable: true }],
      [t("admin.shared.updated"), l(@admin_account.updated_at), { copyable: true }],
    ],
  },
])) %>

<%= render(Admin::DetailsTableComponent.new(sections: [
  {
    title: t("admin.admin_accounts.show.roles"),
    rows: @admin_account.roles.any? ? @admin_account.roles.map { |role| [content_tag(:code, role.key), link_to(role.description.presence || role.key, admin_admin_role_path(role))] } : [[-> { content_tag(:span, t("admin.shared.none"), class: "text-body-secondary") }]],
  },
])) %>

<%= render(Admin::DetailsTableComponent.new(sections: [
  {
    title: t("admin.admin_accounts.show.permissions"),
    rows: @admin_account.permissions.any? ? @admin_account.permissions.map { |p| [content_tag(:code, p.key), link_to(p.description.presence || p.key, admin_admin_permission_path(p))] } : [[-> { content_tag(:span, t("admin.shared.none"), class: "text-body-secondary") }]],
  },
])) %>
