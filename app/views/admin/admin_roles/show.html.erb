<div class="mb-4">
  <h1 class="mb-0"><%= @admin_role.key %></h1>
  <%= render(Admin::ShowActionsComponent.new(
    back_path: admin_admin_roles_path,
    actions: [{ path: edit_admin_admin_role_path(@admin_role), label: t("admin.shared.edit") }]
  )) %>
</div>

<%= render(Admin::DetailsTableComponent.new(
  sections: [
    {
      title: t("admin.shared.details"),
      rows: [
        [t("admin.shared.id"), @admin_role.id],
        [t("admin.admin_roles.columns.key"), content_tag(:code, @admin_role.key)],
        [
          t("admin.admin_roles.columns.description"),
          @admin_role.description.presence ? simple_format(@admin_role.description) : nil,
          { align_top: true },
        ],
        [t("admin.shared.created"), l(@admin_role.created_at), { copyable: true }],
        [t("admin.shared.updated"), l(@admin_role.updated_at), { copyable: true }],
      ],
    },
  ],
)) %>

<%= turbo_frame_tag("admin_role_permissions", src: permissions_admin_admin_role_path(@admin_role), loading: :lazy) do %>
  <div class="card mb-4">
    <div class="card-body text-center text-body-secondary py-5">
      <p class="mb-0"><%= t("admin.shared.loading") %></p>
    </div>
  </div>
<% end %>

<%= turbo_frame_tag("admin_role_accounts", src: admin_accounts_admin_admin_role_path(@admin_role), loading: :lazy) do %>
  <div class="card mb-4">
    <div class="card-body text-center text-body-secondary py-5">
      <p class="mb-0"><%= t("admin.shared.loading") %></p>
    </div>
  </div>
<% end %>
