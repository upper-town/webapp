<%= form_with(
  model: form,
  url: form_url,
  method: form_method,
  data: { "controller" => "form-error-messages-handler" }
) do |f| %>
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title mb-3"><%= t("admin.games.form.details") %></h5>

      <div class="mb-3">
        <%= f.label(:name, t("admin.games.form.name"), class: "form-label") %>
        <%= f.text_field(:name, class: "form-control") %>
        <div class="form-text"><%= t("admin.games.form.name_help") %></div>
      </div>

      <div class="mb-3">
        <%= f.label(:slug, t("admin.games.form.slug"), class: "form-label") %>
        <%= f.text_field(:slug, class: "form-control") %>
        <div class="form-text"><%= t("admin.games.form.slug_help") %></div>
      </div>

      <div class="mb-3">
        <%= f.label(:site_url, t("admin.games.form.site_url"), class: "form-label") %>
        <%= f.text_field(:site_url, class: "form-control") %>
        <div class="form-text"><%= t("admin.games.form.site_url_help") %></div>
      </div>

      <div class="mb-3">
        <%= f.label(:description, t("admin.games.form.description"), class: "form-label") %>
        <%= f.text_area(:description, class: "form-control", rows: 3) %>
        <div class="form-text"><%= t("admin.games.form.description_help") %></div>
      </div>

      <div class="mb-3">
        <%= f.label(:info, t("admin.games.form.info"), class: "form-label") %>
        <%= f.text_area(:info, class: "form-control", rows: 4) %>
        <div class="form-text"><%= t("admin.games.form.info_help") %></div>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.submit(
      submit_label,
      class: "btn btn-primary",
      data: { "turbo-submits-with" => t("shared.button.loading") }
    ) %>
    <%= link_to(t("admin.shared.cancel"), form.persisted? ? admin_game_path(form.game) : admin_games_path, class: "btn btn-outline-secondary ms-2", data: { controller: "back-link", action: "click->back-link#click" }) %>
  </div>
<% end %>
