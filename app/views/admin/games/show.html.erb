<div class="mb-4">
  <h1 class="mb-0"><%= @game.name %></h1>
  <%= render(Admin::ShowActionsComponent.new(
    back_path: admin_games_path,
    actions: [{ path: edit_admin_game_path(@game), label: t("admin.shared.edit") }]
  )) %>
</div>

<%= render(Admin::DetailsTableComponent.new(
  sections: [
    {
      title: t("admin.shared.details"),
      rows: [
        [t("admin.shared.id"), @game.id],
        [Game.human_attribute_name(:name), @game.name],
        [Game.human_attribute_name(:slug), @game.slug],
        [
          Game.human_attribute_name(:site_url),
          @game.site_url.present? ? link_to(@game.site_url, @game.site_url, target: "_blank", rel: "noopener", class: "text-break") : nil,
        ],
        [
          Game.human_attribute_name(:description),
          @game.description.presence ? simple_format(@game.description) : nil,
          { align_top: true },
        ],
        [
          Game.human_attribute_name(:info),
          @game.info.presence ? simple_format(@game.info) : nil,
          { align_top: true },
        ],
        [t("admin.shared.created"), l(@game.created_at), { copyable: true }],
        [t("admin.shared.updated"), l(@game.updated_at), { copyable: true }],
      ],
    },
  ],
)) %>

<%= turbo_frame_tag("game_servers", src: servers_admin_game_path(@game), loading: :lazy) do %>
  <div class="card mb-4">
    <div class="card-body text-center text-body-secondary py-5">
      <p class="mb-0"><%= t("admin.shared.loading") %></p>
    </div>
  </div>
<% end %>
