<%= turbo_frame_tag "webhook_config_events" do %>
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="card-title mb-0"><%= t("admin.webhook_configs.show.events") %></h5>
    </div>
    <div class="card-body">
      <div class="admin-pagination-search-row mb-3">
        <div class="admin-pagination-search-row__pagination">
          <%= render(PaginationComponent.new(@pagination, align: :start)) %>
        </div>
        <%= render(Admin::SearchFormComponent.new(
          url: events_admin_webhook_config_path(@webhook_config),
          search_term: @search_term,
          placeholder: t("admin.webhook_events.index.search_placeholder")
        )) %>
      </div>

      <%=
        render(Admin::TableComponent.new(
          collection: @webhook_events,
          empty_message: t("admin.webhook_events.index.empty_message"),
          columns: [
            [t("admin.shared.id"), -> { link_to(it.id, admin_webhook_event_path(it), class: "fw-medium", data: { turbo_frame: "_top" }) }, { copyable: :id }],
            [t("admin.webhook_events.columns.uuid"), -> { content_tag(:code, truncate(it.uuid, length: 12), class: "small", title: it.uuid) }, { copyable: :uuid }],
            [t("admin.webhook_events.columns.type"), -> { content_tag(:code, it.type, class: "small") }, { copyable: :type }],
            [t("admin.webhook_events.columns.batch"), -> {
              if it.batch
                link_to("##{it.batch.id}", admin_webhook_batch_path(it.batch), data: { turbo_frame: "_top" })
              else
                content_tag(:span, t("admin.webhook_events.columns.unbatched"), class: "badge text-bg-secondary")
              end
            }],
            [t("admin.shared.created"), -> { l(it.created_at) }, { copyable: ->(it) { l(it.created_at) } }],
            [t("admin.shared.actions"), -> {
              render(Admin::IndexActionsComponent.new(
                view_path: admin_webhook_event_path(it),
                link_options: { data: { turbo_frame: "_top" } }
              ))
            }],
          ],
        ))
      %>

      <%= render(PaginationComponent.new(@pagination, align: :start)) %>
    </div>
  </div>
<% end %>
