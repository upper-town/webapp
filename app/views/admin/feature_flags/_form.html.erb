<%= form_with(
  model: form,
  url: form_url,
  method: form_method,
  data: { "controller" => "form-error-messages-handler" }
) do |f| %>
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title mb-3"><%= t("admin.feature_flags.form.details") %></h5>

      <div class="mb-3">
        <%= f.label(:name, class: "form-label") %>
        <%= f.text_field(:name, class: "form-control", placeholder: t("admin.feature_flags.form.name_placeholder")) %>
        <div class="form-text"><%= t("admin.feature_flags.form.name_help") %></div>
      </div>

      <div class="mb-3">
        <%= f.label(:value, class: "form-label") %>
        <%= f.text_field(:value, class: "form-control", placeholder: t("admin.feature_flags.form.value_placeholder")) %>
        <div class="form-text"><%= t("admin.feature_flags.form.value_help") %></div>
      </div>

      <div class="mb-3">
        <%= f.label(:comment, class: "form-label") %>
        <%= f.text_area(:comment, class: "form-control", rows: 3) %>
        <div class="form-text"><%= t("admin.feature_flags.form.comment_help") %></div>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.submit(
      submit_label,
      class: "btn btn-primary",
      data: { "turbo-submits-with" => t("shared.button.loading") }
    ) %>
    <%= link_to(t("admin.shared.cancel"), form.persisted? ? admin_feature_flag_path(form.feature_flag) : admin_feature_flags_path, class: "btn btn-outline-secondary ms-2", data: { controller: "back-link", action: "click->back-link#click" }) %>
  </div>
<% end %>
