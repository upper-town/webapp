<div class="mb-4">
  <h1 class="mb-0"><%= t("admin.admin_sessions.show.title", id: @admin_session.id) %></h1>
  <%= render(Admin::ShowActionsComponent.new(
    back_path: admin_admin_sessions_path,
    actions: [
      { path: admin_admin_user_path(@admin_session.admin_user), label: t("admin.admin_sessions.columns.admin_user") },
    ]
  )) %>
</div>

<%= render(Admin::DetailsTableComponent.new(sections: [
  {
    title: t("admin.shared.details"),
    rows: [
      [t("admin.shared.id"), @admin_session.id, { copyable: true }],
      [t("admin.admin_sessions.columns.admin_user"), link_to(@admin_session.admin_user.email, admin_admin_user_path(@admin_session.admin_user)), { copyable: @admin_session.admin_user.email }],
      [t("admin.admin_sessions.columns.admin_user_id"), link_to(@admin_session.admin_user_id, admin_admin_user_path(@admin_session.admin_user)), { copyable: @admin_session.admin_user_id.to_s }],
      [t("admin.admin_sessions.columns.token_last_4"), content_tag(:code, @admin_session.token_last_four), { copyable: @admin_session.token_last_four }],
      [t("admin.admin_sessions.columns.token_digest"), content_tag(:code, truncate(@admin_session.token_digest, length: 16), class: "small", title: @admin_session.token_digest), { copyable: @admin_session.token_digest }],
      [t("admin.admin_sessions.columns.remote_ip"), content_tag(:code, @admin_session.remote_ip), { copyable: @admin_session.remote_ip }],
      [t("admin.admin_sessions.columns.user_agent"), @admin_session.user_agent.presence || content_tag(:span, t("admin.shared.empty_placeholder"), class: "text-body-secondary"), { copyable: @admin_session.user_agent }],
      [t("admin.admin_sessions.columns.expires_at"), l(@admin_session.expires_at), { copyable: true }],
      [t("admin.admin_sessions.columns.expired"), @admin_session.expired? ? t("admin.shared.yes") : t("admin.shared.no")],
      [t("admin.shared.created"), l(@admin_session.created_at), { copyable: true }],
      [t("admin.shared.updated"), l(@admin_session.updated_at), { copyable: true }],
    ],
  },
])) %>
