<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">
    <%= t("admin.server_votes.index.title") %>
    <% if @server %>
      <small class="text-body-secondary"><%= t("admin.server_votes.index.for_server", name: @server.name) %></small>
    <% elsif @game %>
      <small class="text-body-secondary"><%= t("admin.server_votes.index.for_game", name: @game.name) %></small>
    <% end %>
  </h1>
</div>

<% request_helper = RequestHelper.new(request) %>
<% sort_url_builder = ->(key, dir) { request_helper.url_with_query({ sort: key, sort_dir: dir, page: 1 }, []) } %>

<div class="admin-pagination-search-row mb-3">
  <div class="admin-pagination-search-row__pagination">
    <%= render(PaginationComponent.new(@pagination, align: :start)) %>
  </div>
  <%= form_with(
    method: :get,
    url: admin_server_votes_path,
    class: "d-flex align-items-center gap-2 flex-wrap admin-servers-filter-inline",
    html: { "aria-label": t("admin.server_votes.index.filter.title") }
  ) do |form| %>
    <%= render(Admin::ServerVotesFilterComponent.new(
      form: form,
      selected_game_ids: @filter_game_ids,
      selected_server_ids: @filter_server_ids,
      selected_account_ids: @filter_account_ids,
      selected_account_labels: @filter_account_labels,
      request: request
    )) %>
  <% end %>
  <%= render(Admin::SearchFormComponent.new(
    url: admin_server_votes_path,
    search_term: @search_term,
    placeholder: t("admin.server_votes.index.search_placeholder"),
    hidden_params: params.permit(:server_id, :game_id, :account_id, { game_ids: [] }, { server_ids: [] }, { account_ids: [] }, :sort, :sort_dir).to_h.compact
  )) %>
</div>

<%=
  render(Admin::TableComponent.new(
    collection: @server_votes,
    empty_message: t("admin.server_votes.index.empty_message"),
    sort_column: @sort_column,
    sort_direction: @sort_direction,
    sort_url_builder: sort_url_builder,
    columns: [
      [t("admin.shared.id"), -> { link_to(it.id, admin_server_vote_path(it), class: "fw-medium") }, { copyable: :id, sortable: "id" }],
      [
        ServerVote.human_attribute_name(:server),
        -> { link_to(it.server.name, admin_server_path(it.server)) },
        { copyable: ->(it) { it.server&.name } },
      ],
      [
        ServerVote.human_attribute_name(:game),
        -> { link_to(it.game.name, admin_game_path(it.game)) },
        { copyable: ->(it) { it.game&.name } },
      ],
      [
        ServerVote.human_attribute_name(:account),
        -> {
          if it.account
            link_to(it.account.user.email, admin_user_path(it.account.user))
          else
            content_tag(:span, t("admin.shared.anonymous"), class: "text-body-secondary")
          end
        },
        { copyable: ->(it) { it.account&.user&.email } },
      ],
      [
        ServerVote.human_attribute_name(:uuid),
        -> { content_tag(:code, truncate(it.uuid, length: 12), class: "small", title: it.uuid) },
        { copyable: :uuid },
      ],
      [
        ServerVote.human_attribute_name(:remote_ip),
        -> { content_tag(:code, it.remote_ip, class: "small") },
        { copyable: :remote_ip, sortable: "remote_ip" },
      ],
      [t("admin.shared.created"), -> { l(it.created_at) }, { copyable: ->(it) { l(it.created_at) }, sortable: "created_at" }],
      [t("admin.shared.actions"), -> { render(Admin::IndexActionsComponent.new(view_path: admin_server_vote_path(it))) }],
    ],
  ))
%>

<%= render(PaginationComponent.new(@pagination, align: :start)) %>
