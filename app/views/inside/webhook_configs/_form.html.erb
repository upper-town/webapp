<%= form_with(
  model: form,
  url: form_url,
  method: form_method,
  data: { "controller" => "form-error-messages-handler" }
) do |f| %>
  <div class="card mb-4 border-0 shadow-sm">
    <div class="card-body">
      <h5 class="card-title mb-3"><%= t("inside.webhook_configs.form.details") %></h5>

      <div class="mb-3">
        <%= f.label(:url, class: "form-label") %>
        <%= f.url_field(:url, class: "form-control", placeholder: t("inside.webhook_configs.form.url_placeholder")) %>
        <div class="form-text"><%= t("inside.webhook_configs.form.url_help") %></div>
      </div>

      <div class="mb-3">
        <%= f.label(:secret, class: "form-label") %>
        <%= f.password_field(:secret, class: "form-control", placeholder: form.persisted? ? t("inside.webhook_configs.form.secret_placeholder") : nil) %>
        <div class="form-text"><%= t("inside.webhook_configs.form.secret_help_#{form.persisted? ? 'keep' : 'new'}") %></div>
      </div>

      <div class="mb-3">
        <%= f.label(:method, class: "form-label") %>
        <%= f.select(:method, WebhookConfig::METHODS, {}, class: "form-select") %>
      </div>

      <div class="mb-3">
        <%= f.label(:event_types_string, t("inside.webhook_configs.form.event_types"), class: "form-label") %>
        <%= f.text_field(:event_types_string, class: "form-control", placeholder: t("inside.webhook_configs.form.event_types_placeholder")) %>
        <div class="form-text"><%= t("inside.webhook_configs.form.event_types_help") %></div>
      </div>

      <% if form.persisted? %>
        <div class="mb-3 form-check">
          <%= f.check_box(:disabled, { class: "form-check-input" }, "1", "0") %>
          <%= f.label(:disabled, class: "form-check-label") %>
          <div class="form-text"><%= t("inside.webhook_configs.form.disabled_help") %></div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.submit(
      submit_label,
      class: "btn btn-primary",
      data: { "turbo-submits-with" => t("shared.button.loading") }
    ) %>
    <%= link_to(
      t("inside.webhook_configs.form.cancel"),
      form.persisted? ? inside_server_webhook_config_path(server, form.webhook_config) : inside_server_webhook_configs_path(server),
      class: "btn btn-outline-secondary ms-2",
      data: { controller: "back-link", action: "click->back-link#click" }
    ) %>
  </div>
<% end %>
