<div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
  <div>
    <h1 class="mb-1"><%= t("inside.webhook_configs.new.title", name: @server.name) %></h1>
    <div class="d-flex flex-wrap gap-2 mt-2">
      <%= link_to inside_server_webhook_configs_path(@server), class: "btn btn-outline-secondary btn-sm" do %>
        <i class="bi bi-arrow-left me-1"></i>
        <%= t("inside.webhook_configs.new.back_to") %>
      <% end %>
    </div>
  </div>
</div>

<%= render("form", form: @form, server: @server, form_url: inside_server_webhook_configs_path(@server), form_method: :post, submit_label: t("inside.webhook_configs.new.submit")) %>
