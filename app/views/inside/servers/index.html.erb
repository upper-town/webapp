<div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
  <h1 class="mb-0"><%= t("inside.servers.index.title") %></h1>
  <%= link_to new_inside_server_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-lg me-1"></i>
    <%= t("inside.servers.index.add_server") %>
  <% end %>
</div>

<% if @servers.any? %>
  <% unless @servers.all?(&:verified?) %>
    <div class="alert alert-info py-2 mb-4 small d-flex align-items-center gap-2">
      <i class="bi bi-info-circle"></i>
      <%= t("inside.servers.index.verification_help") %>
    </div>
  <% end %>

  <div class="row g-3">
    <% @servers.each do |server| %>
      <div class="col-12 col-md-6 col-lg-4">
        <%= render Inside::ServerCardComponent.new(
          server: server,
          server_stats_hash: @server_stats_hash,
          period: @period
        ) %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card border-0 shadow-sm bg-body-secondary bg-opacity-25">
    <div class="card-body text-center py-5">
      <i class="bi bi-hdd-stack display-4 text-body-secondary mb-3"></i>
      <h5 class="card-title"><%= t("inside.servers.index.empty_title") %></h5>
      <p class="card-text text-body-secondary mb-3">
        <%= t("inside.servers.index.empty_message") %>
        <%= t("inside.servers.index.empty_help") %>
      </p>
      <%= link_to new_inside_server_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-lg me-1"></i>
        <%= t("inside.servers.index.add_server") %>
      <% end %>
    </div>
  </div>
<% end %>
