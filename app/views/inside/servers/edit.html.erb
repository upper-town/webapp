<%= form_with(
  model: @form,
  url: inside_server_path(@server),
  method: :patch,
  data: { "controller" => "form-error-messages-handler" }
) do |form| %>
  <div class="mb-3">
    <%= form.label(:game_id, "Game", class: "form-label") %>
    <%= render(GameSelectComponent.new(
      form,
      only_in_use: false,
      blank_name: nil,
      selected_value: @form.game_id
    )) %>
  </div>

  <div class="mb-3">
    <%= form.label(:country_code, "Country", class: "form-label") %>
    <%= render(CountrySelectComponent.new(
      form,
      only_in_use: false,
      with_continents: false,
      blank_name: nil,
      selected_value: @form.country_code
    )) %>
  </div>

  <div class="mb-3">
    <%= form.label(:name, "Name", class: "form-label") %>
    <%= form.text_field(:name, class: "form-control") %>
  </div>

  <div class="mb-3">
    <%= form.label(:site_url, "Site URL", class: "form-label") %>
    <%= form.text_field(:site_url, class: "form-control") %>
  </div>

  <div class="mb-3">
    <%= form.label(:banner_image, "Banner Image", class: "form-label") %>
    <%= form.file_field(:banner_image, class: "form-control") %>
    <% if @server.banner_image.attached? %>
      <div class="form-text"><%= t("inside.servers.edit.current_banner") %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label(:description, "Description", class: "form-label") %>
    <%= form.text_area(:description, class: "form-control", rows: 3) %>
  </div>

  <div class="mb-3">
    <%= form.label(:info, "Info", class: "form-label") %>
    <%= form.text_area(:info, class: "form-control", rows: 4) %>
  </div>

  <div class="mb-3">
    <%= form.submit(
      t("inside.servers.edit.submit"),
      class: "btn btn-primary",
      data: { "turbo-submits-with" => t("shared.button.loading") }
    ) %>
    <%= link_to(t("admin.shared.cancel"), inside_servers_path, class: "btn btn-outline-secondary ms-2") %>
  </div>
<% end %>
