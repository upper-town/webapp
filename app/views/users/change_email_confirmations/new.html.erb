<% content_for(:head) do %>
  <%= captcha_script_tag %>
<% end %>

<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-6">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
      <h1 class="h2 mb-0"><%= t("users.change_email_confirmations.new.title") %></h1>
      <%= link_to inside_account_path, class: "btn btn-outline-secondary btn-sm" do %>
        <i class="bi bi-arrow-left me-1"></i>
        <%= t("users.change_email_confirmations.new.back_to_account") %>
      <% end %>
    </div>

    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <%= form_with(
          model: @change_email_confirmation,
          method: :post,
          url: users_change_email_confirmation_path,
          data: { "controller" => "form-error-messages-handler" }
        ) do |form| %>
          <div class="mb-3">
            <%= form.label(:email, class: "form-label") %>
            <%= form.email_field(
              :email,
              autofocus: true,
              autocomplete: "email",
              class: "form-control",
              aria: { describedby: "email-help" },
              required: true
            ) %>
            <div id="email-help" class="form-text">
              <%= t("users.change_email_confirmations.new.email_help") %>
            </div>
          </div>

          <div class="mb-3">
            <%= form.label(:change_email, class: "form-label") %>
            <%= form.email_field(
              :change_email,
              autocomplete: "email",
              class: "form-control",
              aria: { describedby: "change-email-help" },
              required: true
            ) %>
            <div id="change-email-help" class="form-text">
              <%= t("users.change_email_confirmations.new.change_email_help") %>
            </div>
          </div>

          <div class="mb-3">
            <%= form.label(:password, class: "form-label") %>
            <%= form.password_field(
              :password,
              autocomplete: "current-password",
              class: "form-control",
              required: true
            ) %>
          </div>

          <div class="mb-3">
            <%= captcha_widget_tag %>
          </div>

          <div class="mb-3">
            <%= form.submit(
              t("users.change_email_confirmations.new.submit"),
              class: "btn btn-primary",
              data: { "turbo-submits-with" => t("shared.button.loading") }
            ) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
