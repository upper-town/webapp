<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-6">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h2 class="card-title h4 mb-4">
          <%= t("shared.nav.sign_up") %>:
          <%= t("users.email_confirmations.edit.title") %>
        </h2>

        <%= form_with(
          model: @email_confirmation,
          method: :put,
          url: users_email_confirmation_path,
          data: { "controller" => "form-error-messages-handler" }
        ) do |form| %>
          <%= form.hidden_field(:token) %>

          <div class="mb-3">
            <%= form.label(:code, class: "form-label") %>
            <%= form.text_field(
              :code,
              autofocus: true,
              autocomplete: "one-time-code",
              inputmode: "numeric",
              class: "form-control",
              aria: { describedby: "code-help" },
              required: true
            ) %>
            <div id="code-help" class="form-text">
              <%= t("users.email_confirmations.edit.code_help") %>
            </div>
          </div>

          <div class="mb-4">
            <%= form.submit(
              t("users.email_confirmations.edit.submit"),
              class: "btn btn-primary",
              data: {
                "turbo-submits-with" => t("shared.button.confirming")
              }.compact
            ) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
