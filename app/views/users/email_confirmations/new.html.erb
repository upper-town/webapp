<% content_for(:head) do %>
  <%= captcha_script_tag %>
<% end %>

<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-6">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h2 class="card-title h4 mb-2">
          <%= t("shared.nav.sign_up") %>:
          <%= t("users.email_confirmations.new.email_confirmation") %>
        </h2>
        <p class="text-body-secondary small mb-4">
          <%= t("users.email_confirmations.new.description") %>
        </p>

        <%= form_with(
          model: @email_confirmation,
          method: :post,
          url: users_email_confirmation_path,
          data: { "controller" => "form-error-messages-handler" }
        ) do |form| %>
          <div class="mb-3">
            <%= form.label(:email, class: "form-label") %>
            <%= form.email_field(
              :email,
              autofocus: true,
              autocomplete: "email",
              class: "form-control",
              aria: { describedby: "email-help" },
              required: true
            ) %>
            <div id="email-help" class="form-text">
              <%= t("users.email_confirmations.new.email_help_html") %>
            </div>
          </div>

          <div class="mb-3">
            <%= captcha_widget_tag %>
          </div>

          <div class="mb-4">
            <%= form.submit(
              t("users.email_confirmations.new.submit"),
              class: "btn btn-primary",
              data: { "turbo-submits-with" => t("shared.button.loading") }
            ) %>
          </div>
        <% end %>

        <p class="mb-0 small text-body-secondary">
          <%= t("users.email_confirmations.new.already_have_account") %>
          <%= link_to(t("users.email_confirmations.new.click_here_to_sign_in"), users_sign_in_path, class: "text-decoration-none") %>
        </p>
      </div>
    </div>
  </div>
</div>
