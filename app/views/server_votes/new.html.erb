<% content_for(:head) do %>
  <%= captcha_script_tag %>
<% end %>

<h2>Vote for you server!</h2>

<p>
  <%= @server.name %>
</p>

<%= form_with(
  model: @form,
  method: :post,
  url: server_votes_path(@server),
  data: { "controller" => "form-error-messages-handler" }
) do |form| %>
  <%= captcha_widget_tag %>

  <%= form.hidden_field(:reference, value: @form.reference) %>

  <%=
    form.submit(
      "Click to vote!",
      class: "btn btn-primary",
      data: { "turbo-submits-with" => "Loading..." }
    )
  %>
<% end %>
