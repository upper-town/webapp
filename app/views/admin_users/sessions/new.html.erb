<% content_for(:head) do %>
  <%= captcha_script_tag %>
<% end %>

<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-5">
    <div class="card shadow-sm border-0">
      <div class="card-body p-4 p-md-5">
        <div class="d-flex align-items-center gap-2 mb-4">
          <span class="rounded-circle bg-primary bg-opacity-10 p-2" aria-hidden="true">
            <i class="bi bi-shield-lock text-primary" style="font-size: 1.5rem;"></i>
          </span>
          <h1 class="card-title h4 mb-0"><%= t("admin_users.sessions.new.title") %></h1>
        </div>

        <%= form_with(
          model: @session,
          method: :post,
          url: admin_users_sessions_path,
          data: { "controller" => "form-error-messages-handler" }
        ) do |form| %>
          <div class="mb-3">
            <%= form.label(:email, class: "form-label") %>
            <%= form.email_field(
              :email,
              autofocus: true,
              autocomplete: "email",
              class: "form-control",
              required: true
            ) %>
          </div>

          <div class="mb-3">
            <%= form.label(:password, class: "form-label") %>
            <%= form.password_field(
              :password,
              autocomplete: "current-password",
              class: "form-control",
              required: true
            ) %>
          </div>

          <div class="mb-3 form-check">
            <%= form.check_box(:remember_me, class: "form-check-input") %>
            <%= form.label(:remember_me, class: "form-check-label") %>
          </div>

          <div class="my-3">
            <%= captcha_widget_tag %>
          </div>

          <div class="mb-4">
            <%= form.submit(
              t("shared.button.submit"),
              class: "btn btn-primary w-100",
              data: { "turbo-submits-with" => t("shared.button.loading") }
            ) %>
          </div>
        <% end %>

        <ul class="list-unstyled mb-0 small text-body-secondary">
          <li class="mb-2">
            <%= t("admin_users.sessions.new.forgot_your_password") %>
            <%= link_to(
              t("admin_users.sessions.new.click_here_to_reset_password"),
              new_admin_users_password_reset_path,
              class: "text-decoration-none"
            ) %>
          </li>
          <li>
            <%= link_to(
              root_path,
              class: "text-decoration-none d-inline-flex align-items-center gap-1"
            ) do %>
              <i class="bi bi-arrow-left" aria-hidden="true"></i>
              <%= t("admin_users.sessions.new.back_to_site") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
